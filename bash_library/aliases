#-------------------------------------------------------------------------------
# Global configuration goes here
#-------------------------------------------------------------------------------
# Common
alias c="clear"
alias ll="ls -alh"
alias ncat="cat -n"

HELP_ALIASES="c ll ncat\n"

#-------------------------------------------------------------------------------
# Per-file configuration
#-------------------------------------------------------------------------------
for f in ~/.bash_library/aliases.d/*;
do
    source $f;
done

#-------------------------------------------------------------------------------
# Usage
#-------------------------------------------------------------------------------
echo "Aliases:"
echo -e "$HELP_ALIASES"
